@model ProductListViewModel

<div class="text-center">
    <div class="display-6"> Products </div>

    <div class="d-flex justify-content-end my-3">
        <a class="btn btn-outline-success" asp-action="Create">
            <i class="fa fa-plus"></i>
            Create
        </a>
    </div>

    <div class="row">
        <div class="col-md-3">
            @await Component.InvokeAsync("CategoriesMenu")
            @await Component.InvokeAsync("ProductFilterMenu")
            <div products="" number="3"> </div>
        </div>
        <div class="col-md-9">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th scope="col">Product Id</th>
                        <th scope="col">Image Url</th>
                        <th scope="col">Product Name</th>
                        <th scope="col">Showcase</th>
                        <th scope="col">Product Price</th>
                        <th scope="col">Operations</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Product prd in Model.Products)
                    {
                        <tr>
                            <td>@prd.ProductId</td>
                            <td>
                                <img class="border border-danger rounded-circle" src="@prd?.ImageUrl" alt="@prd?.ProductName" width="50" />
                            </td>
                            <td>@prd.ProductName</td>
                            <td>
                                <div class="form-check form-switch">
                                    <input type="checkbox" class="form-check-input" checked="@prd.ShowCase" disabled />
                                </div>
                            </td>
                            <td>@prd.ProductPrice.ToString("c")</td>
                            <td>
                                <div class="btn-group">
                                    <a data-toggle="tooltip" data-placement="top" title="Edit" class="btn btn-warning mx-1" asp-action="Update" asp-route-id="@prd.ProductId">
                                        <i class="fa-solid fa-pen-to-square"></i>
                                    </a>

                                    <a data-toggle="tooltip" data-placement="top" title="Web" class="btn btn-info mx-1" target="_blank" asp-area="" asp-controller="Product" asp-action="Get" asp-route-id="@prd.ProductId">
                                        <i class="fa-solid fa-magnifying-glass"></i>

                                    </a>
                                    <a data-toggle="tooltip" data-placement="top" title="Delete" class="btn btn-danger mx-1" asp-action="Delete" asp-route-id="@prd.ProductId">
                                        <i class="fa-solid fa-trash-can"></i>

                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="text-center">
                <div page-model="@Model?.Pagination" page-action="Index"
                     page-classes-enabled="true"
                     page-class="btn"
                     page-class-normal="btn-outline-dark"
                     page-class-selected="btn-primary"
                     class="btn-group">

                </div>
            </div>
        </div>
    </div>

    
</div>

@section Scripts
{
    <script type="text/javascript">
        $(document).ready(() => {
            $('[data-toggle="tooltip"]').tooltip()
        });
    </script>
}