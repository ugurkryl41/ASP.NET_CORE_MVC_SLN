@model ProductDtoForUpdate

<div class="text-center">
    <div class="display-6"> Update  </div>
</div>

<form method="post" asp-action="Update" enctype="multipart/form-data">
    <div class="text-danger" asp-validation-summary="All"> </div>

    <input type="hidden" asp-for="ProductId" />

    <div class="form-group my-3">
        <label asp-for="CategoryId"> </label>
        <select asp-for="CategoryId" asp-items="@ViewBag.Categories" class="form-control">  </select>
    </div>
    <div class="form-group my-3">
        <label asp-for="ProductName"> </label>
        <input asp-for="ProductName" class="form-control" />
    </div>
    <div class="form-group my-3">
        <label asp-for="Summary"> </label>
        <input asp-for="Summary" class="form-control" />
    </div>
    <div class="form-group my-3">
        <label asp-for="ProductPrice"> </label>
        <input asp-for="ProductPrice" class="form-control" />
    </div>

    <div class="form-check form-switch">
        <input asp-for="Showcase" class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" checked>
        <label class="form-check-label" for="flexSwitchCheckChecked">Showcase</label>
    </div>

    <div class="form-group my-3">
        <img src="@Model?.ImageUrl" class="rounded shadow" width="150" />
    </div>
    <div class="form-group my-3">
        <label asp-for="ImageUrl"> </label>
        <input name="file" type="file" class="form-control" />
    </div>
    <div class="form-group my-3">
        <div class="btn-group">
            <button class="btn btn-primary" type="submit">
                <i class="fa fa-save"></i>
                Update
            </button>
            <a asp-action="Index" class="btn btn-outline-primary">
                <i class="fa fa-list"></i>
                Products
            </a>
        </div>
    </div>
</form>