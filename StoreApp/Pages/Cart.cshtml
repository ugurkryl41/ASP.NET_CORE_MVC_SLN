@page "/cart"
@model CartModel

Cart  (@Model.Cart.Lines.Count())

<div>
    <div class="display-6 text-center">
        Cart
    </div>
    <table>
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Subtotal</th>
                <th> </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var line in Model.Cart?.Lines ?? Enumerable.Empty<CartLine>())
            {
                <tr>
                    <td>@line.Product.ProductName</td>
                    <td>@line.Quantity</td>
                    <td>@line.Product.ProductPrice.ToString("c")</td>
                    <td>@((line.Product.ProductPrice*line.Quantity).ToString("c2"))</td>
                    <td>
                        <form asp-page-handler="Remove" method="post">
                            <input type="hidden" name="id" value="@line.Product.ProductId" />
                            <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
                            <button type="submit" class="btn btn-sm btn-danger">
                                <i class="fa-solid fa-trash-can"></i>
                                Remove
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="4" class="text-right"> Total : </td>
                <td class="text-right text-danger"> @Model.Cart?.ComputeTotalValue().ToString("c2") </td>
            </tr>
        </tfoot>
    </table>
    <div class="text-center my-3">
        <div class="btn-group">
            <a class="btn btn-primary" href="@Model?.ReturnUrl" > Continue Shopping</a>
            <a class="btn btn-primary mx-2" asp-action="Checkout" asp-controller="Order" >Checkout</a>
        </div>
    </div>
</div>